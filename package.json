	"license": "MIT",
	"devDependencies": {
		"@biomejs/biome": "1.8.2",
		"@types/node": "^20.14.8",
		"lefthook": "^1.6.18",
		"nodemon": "^3.1.4",
		"ts-node": "^10.9.2",
		"typescript": "^5.5.2",
		"vitest": "^1.6.0"
	}
}
